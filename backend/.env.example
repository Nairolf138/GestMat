MONGODB_URI=mongodb://localhost/gestmat
# Example for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.example.mongodb.net/gestmat
JWT_SECRET=your_jwt_secret
PORT=5000
# Adjust the path prefix for all API routes. Set to an empty string to mount at the domain root.
API_PREFIX=/api
# Public URL for the API, including the prefix when one is configured.
# API_URL=http://localhost:5000/api
# SameSite policy for auth cookies (lax, strict or none). Defaults to lax.
# Use "none" with HTTPS deployments that need to send cookies across domains or webviews.
COOKIE_SAME_SITE=lax
# Allowed origins for CORS; separate multiple entries with commas.
# The production frontend https://gestmat.nairolfconcept.fr is always allowed,
# so only add extra hosts (local dev, staging, etc.) here when needed.
CORS_ORIGIN=http://localhost:3000
# Increase or disable request throttling during development
RATE_LIMIT_MAX=1000
# Loan reminders
# Hours before a start/end date to send reminders
LOAN_REMINDER_OFFSET_HOURS=24
# Run reminder checks every day at 9:00 local time (set to "false" to disable)
# Accepted values: the lowercase strings "true" or "false"
LOAN_REMINDER_DAILY_SCHEDULE_ENABLED=true
# Enable interval-based retries when reminders need extra redundancy ("true"/"false")
LOAN_REMINDER_FALLBACK_INTERVAL_ENABLED=false
# Interval in minutes for the fallback reminder scheduler
LOAN_REMINDER_INTERVAL_MINUTES=60
# Vehicle compliance reminders (expiry notifications)
VEHICLE_COMPLIANCE_REMINDER_OFFSET_DAYS=30
VEHICLE_COMPLIANCE_REMINDER_INTERVAL_MINUTES=720
# Run a daily compliance sweep at 08:00 local time ("true"/"false")
VEHICLE_COMPLIANCE_DAILY_SCHEDULE_ENABLED=true
# Archive jobs
LOAN_ARCHIVE_MIN_AGE_DAYS=365
LOAN_ARCHIVE_INTERVAL_DAYS=1
LOAN_ARCHIVE_BATCH_SIZE=100
# SMTP configuration examples
# SMTP_URL=smtp://user:pass@smtp.example.com:587
# NOTIFY_EMAIL=alerts@example.com # defaults to the sender and recipient; falls back to no-reply@<SMTP host>
